<div class="folder-menu">
  <div class="title">
    <h1><%= @folder.name %></h1>
  </div>
  <%= form_tag("/folders/createBook") do %>
    <%= react_component("CreateBook", {name: "本を追加する", folder_name: @folder.name})%>
  <% end %>
</div>
<div class="folder-table">
  <table>
    <thead>
      <tr>
        <th class="name">名前</th>
        <th class="c_day">出来日</th>
        <th class="i_day">入荷日</th>
        <th class="amount">入荷数</th>
        <th class="orders">予約数</th>
        <th class="date">最終更新日</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
      　<td class="name-value">
          <%= react_component("BookInfo", {
            folder_name: @folder.name,
            book_name: book.name,
            c_day: book.c_day,
            i_day: book.i_day,
            amount: book.amount
          })%>
        </td>
        <td>
          <%= book.c_day %>
        </td>
        <td></td>
        <td></td>
        <td class="date-value"><%= book.created_at.strftime("%m/%d %H:%M") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
