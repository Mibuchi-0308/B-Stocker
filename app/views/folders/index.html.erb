<div class="folder-menu">
  <div class="title">
    <h1>フォルダ一覧</h1>
  </div>
  <%= form_tag("/folders/create") do %>
    <%= react_component("CreateFolder", {name: "フォルダ作成"})%>
  <% end %>
</div>
<div class="folder-table">
  <table>
    <thead>
      <tr>
        <th class="name">名前</th>
        <th class="date">最終更新日</th>
      </tr>
    </thead>
    <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td class="name-value"><%= folder.name %></td>
        <td class="date-value"><%= folder.created_at.strftime("%Y年%m月%d日 %H:%M:%S") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
