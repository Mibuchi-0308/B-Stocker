<h1><%= @currentUser.name %>のページ</h1>

<%= form_tag("/users/#{@currentUser.id}/updateUser", id: "updateUser_#{@currentUser.id}") do %>
<% end %>
<%= form_tag("/users/#{@currentUser.id}/deleteUser", id: "deleteUser_#{@currentUser.id}") do %>
<% end %>
<%= form_tag("/users/#{@currentUser.id}/passOfPassword", id: "passOfPassword_#{@currentUser.id}") do %>
<% end %>

<% if @checkedPassword %>
  <%= react_component("UserPage",
                     {userName: @currentUser.name,
                      email: @currentUser.email,
                      password: @checkedPassword,
                      userId: @currentUser.id,
                      checked: true}) %>
<% else %>
  <%= react_component("UserPage",
                     {userName: @currentUser.name,
                      email: @currentUser.email,
                      password: @checkedPassword,
                      userId: @currentUser.id}) %>
<% end %>
